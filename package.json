{
	"name": "rewardTask",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "react-native start --reset-cache",
		"pods": "cd ios && pod install",
		"android": "react-native run-android --mode=debug --terminal terminal",
		"android-release": "react-native run-android --mode=release --terminal terminal",
		"log-android": "npx react-native log-android",
		"ios": "npx react-native run-ios --mode Debug --terminal terminal",
		"ios-release": "npx react-native run-ios --mode Release --terminal terminal",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint src --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"start": "react-native start",
		"test": "jest",
		"format": "prettier ./src --write",
		"tsc": "tsc --noEmit --module esnext",
		"clean-android": "cd android && ./gradlew clean",
		"bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
		"build-android-debug-apk": "cd android && ./gradlew assembleDebug",
		"build-android-release-apk": "cd android && ./gradlew assembleRelease",
		"build-android-release-aab": "npx react-native build-android --mode=release",
		"prepare": "husky"
	},
	"dependencies": {
		"@feature-sliced/eslint-config": "^0.1.1",
		"react": "18.3.1",
		"react-native": "0.76.3"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/preset-env": "^7.25.3",
		"@babel/runtime": "^7.25.0",
		"@react-native-community/cli": "15.0.1",
		"@react-native-community/cli-platform-android": "15.0.1",
		"@react-native-community/cli-platform-ios": "15.0.1",
		"@react-native/babel-preset": "0.76.3",
		"@react-native/eslint-config": "0.76.3",
		"@react-native/metro-config": "0.76.3",
		"@react-native/typescript-config": "0.76.3",
		"@types/react": "^18.2.6",
		"@types/react-test-renderer": "^18.0.0",
		"babel-jest": "^29.6.3",
		"eslint": "^8.19.0",
		"eslint-plugin-boundaries": "^5.0.1",
		"eslint-plugin-import": "^2.31.0",
		"husky": "^9.1.7",
		"jest": "^29.6.3",
		"prettier": "2.8.8",
		"react-test-renderer": "18.3.1",
		"typescript": "5.0.4"
	},
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"*.{ts,json,tsx,js,jsx}": "npm run format",
		"*.{ts,tsx,js,jsx}": "npm run lint:fix"
	},
	"packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
